<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivityVentazaMaintenance"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="Maintenance Ventaza"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/editTextTextRoomNumberMaintenanceVentaza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room Number (eg 1127)"
        android:inputType="text"
        android:textColor="#000"
        android:background="#f0f0f4"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="16dp"
        android:layout_below="@+id/textView3"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextRoomNumberMaintenanceVentaza"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:text="Maintenance Type : "
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroupChooseMaintenanceVentaza"
        android:layout_below="@id/textView5">
    <RadioButton
        android:id="@+id/radioButtonChangeSparepart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/radioButtonReplaceNew"
        android:text="Change Sparepart"
        android:layout_marginRight="30dp"/>

    <RadioButton
        android:id="@+id/radioButtonReplaceNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextRoomNumberMaintenanceVentaza"
        android:layout_marginTop="10dp"
        android:text="Replace New Device"
        android:layout_marginLeft="40dp"/>
    </RadioGroup>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupChooseMaintenanceVentaza"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:text="Note : "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextNoteMaintenanceVentaza"
        android:layout_width="381dp"
        android:layout_height="121dp"
        android:layout_below="@id/textView4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="5000"
        android:maxLines="4"
        android:scrollHorizontally="false" />

    <Button
        android:id="@+id/buttonAddMaintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNoteMaintenanceVentaza"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btnformate"
        android:gravity="center"
        android:padding="14dp"
        android:text="Add Record"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16dp" />


</RelativeLayout>